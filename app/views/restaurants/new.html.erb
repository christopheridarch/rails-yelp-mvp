<div class="container">
  <h1>Create a new Restaurant</h1>

  <%= simple_form_for [@restaurant] do |f| %>
  <%= f.input "name"%>
  <%= f.input "address"%>
  <%= f.input "phone_number"%>
  <%= f.input "category", priority: [ "chinese" ], collection: [ "chinese", "italian", "japanese", "french", "belgian"]%>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
  <% end %>

</div>
